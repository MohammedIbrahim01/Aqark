<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lbl_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="alex"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/lbl_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="120"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/lbl_numberOfRooms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="4"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/lbl_numberOfBathrooms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/lbl_floorType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="ceramic"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/lbl_finishingType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="lux"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/lbl_equipments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="TV and Conditioner"
        android:textSize="15sp" />


</LinearLayout>

